    <!-- Page content -->
    <div class="container-fluid mt--6">
      <div id="profile-alert"></div>
      <div class="row">
        <div class="col-xl-12 order-xl-1">
          <div class="card">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Datos del Usuario: {{dash.email}}</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/data/edit/{{dash._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <h6 class="heading-small text-muted mb-4">Informacion del usuario</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label">Plan</label>
                        <input type="text" name="plan" class="form-control" placeholder="Plan..." value="{{dash.plan}}">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label">Número de Planes</label>
                        <input type="number" name="numberplan" class="form-control" placeholder="0" value="{{dash.numberplan}}">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label">Estatus</label>
                        <input type="txt" name="status" class="form-control" placeholder="Estatus..." value="{{dash.status}}">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label">Inversión</label>
                        <input type="number" name="investment" class="form-control" placeholder="0" value="{{dash.investment}}">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label">Balance</label>
                        <input type="number" name="balance" class="form-control" placeholder="0" value="{{dash.balance}}">
                      </div>
                    </div>
                  </div>
                </div>
                <hr class="my-4" />
                <!-- Address -->
                <h6 class="heading-small text-muted mb-4">Más Información:</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label class="form-control-label">Días Corridos</label>
                        <input name="day" class="form-control" placeholder="0/15" type="text" value="{{dash.day}}">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label">Fecha</label>
                        <input type="text" name="date" class="form-control" placeholder="00/00/00" value="{{dash.date}}">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label">Referidos</label>
                        <input type="number" name="referral" class="form-control" placeholder="0" value="{{dash.referral}}">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label">Referidos Activos</label>
                        <input type="number" name="referralactive" class="form-control" placeholder="0" value="{{dash.referralactive}}">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 text-center">
                  <button type="submit" class="btn btn-success">Guardar Cambios</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
